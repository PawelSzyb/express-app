<header class="main-header">
  <nav class="main-header__nav">
    <ul class="main-header__list-item">
      <li class="main-header__item <%= path === '/' ? 'active' : '' %>">
        <a href="/">Shop</a>
      </li>
      <li class="main-header__item <%= path === '/products' ? 'active' : '' %>">
        <a href="/products">Products</a>
      </li>
      <% if(isAuthenticated) { %>
      <li class="main-header__item <%= path === '/cart' ? 'active' : '' %>">
        <a href="/cart">Cart</a>
      </li>
      <li class="main-header__item <%= path === '/orders' ? 'active' : '' %>">
        <a href="/orders">Orders</a>
      </li>
      <li
        class="main-header__item <%= path === '/admin/add-product' ? 'active' : '' %>"
      >
        <a href="/admin/add-product">Add-Product</a>
      </li>
      <li
        class="main-header__item <%= path === '/admin/products' ? 'active' : '' %>"
      >
        <a href="/admin/products">Admin-Products</a>
      </li>
      <% } %>
    </ul>
    <ul class="main-header__list-item">
      <% if(!isAuthenticated) { %>
      <li class="main-header__item <%= path === '/login' ? 'active' : '' %>">
        <a href="/login">Login</a>
      </li>
      <li class="main-header__item <%= path === '/signup' ? 'active' : '' %>">
        <a href="/signup">SignUp</a>
      </li>
      <% } else { %>
      <li class="mobile-nav__item">
        <form action="/logout" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button type="submit">Logout</button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>
