<%- include("../partials/header.ejs") %> <%- include("../partials/navbar.ejs")
%>
<main>
  <% if(messages.length > 0) { %> <% messages.forEach(message => { %>
  <p class="user__message user__message-error"><%= message.msg %></p>
  <% }) %> <%} %>

  <form class="signup-form" action="/signup" method="POST" novalidate>
    <div class="form-control">
      <label for="name">Name</label>
      <input type="text" name="name" id="name" value="<%= inputs.name %>" />
    </div>
    <div class="form-control">
      <label for="email">Email</label>
      <input
        type="email"
        name="email"
        id="email"
        value="<%= inputs.email %>"
        class="<%= validationErrors.find(error => error.param === 'email') ? 'is-invalid': '' %>"
      />
    </div>
    <div class="form-control">
      <label for="password">Password</label>
      <input
        type="password"
        name="password"
        id="password"
        value="<%= inputs.password %>"
        class="<%= validationErrors.find(error => error.param === 'password') ? 'is-invalid': '' %>"
      />
    </div>
    <div class="form-control">
      <label for="password2">Comfirm Password</label>
      <input
        type="password"
        name="password2"
        id="password2"
        value="<%= inputs.password2 %>"
        class="<%= validationErrors.find(error => error.param === 'password2') ? 'is-invalid': '' %>"
      />
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <button type="submit">SignUp</button>
  </form>
</main>
<%- include("../partials/footer.ejs") %>
